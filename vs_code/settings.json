{
    // Editor settings
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "monospace",
    "keyboard.dispatch": "keyCode",
    "editor.fontWeight": "500",
    "editor.fontSize": 16,
    "editor.detectIndentation": true,
    "editor.hideCursorInOverviewRuler": true,
    "editor.lineNumbers": "relative",
    // Workbench settings
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    // Theme settings
    "workbench.colorTheme": "Material Theme",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorCustomizations": {
        "activityBarBadge.background": "#00BCD4",
        "list.activeSelectionForeground": "#00BCD4",
        "list.inactiveSelectionForeground": "#00BCD4",
        "list.highlightForeground": "#00BCD4",
        "scrollbarSlider.activeBackground": "#00BCD450",
        "editorSuggestWidget.highlightForeground": "#00BCD4",
        "textLink.foreground": "#00BCD4",
        "progressBar.background": "#00BCD4",
        "pickerGroup.foreground": "#00BCD4",
        "tab.activeBorder": "#00BCD4",
        "notificationLink.foreground": "#00BCD4"
    },
    "materialTheme.cache.workbench.settings": {
        "accent": "Cyan",
        "themeColours": "Darker High Contrast",
        "accentPrevious": "Blue"
    },
    // Vin settings
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-w>": false,
        "<C-tab>": false,
        "<C-f>": false
    },
    "vim.easymotion": true,
    "vim.enableNeovim": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    // Vim keybindings
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "w",
                "q"
            ],
            "commands": [
                {
                    "command": ":wq"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "v"
            ],
            "commands": [
                {
                    "command": "workbench.action.splitEditor"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "h"
            ],
            "commands": [
                {
                    "command": "workbench.action.focusPreviousGroup"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "l"
            ],
            "commands": [
                {
                    "command": "workbench.action.focusNextGroup"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "t",
                "e"
            ],
            "commands": [
                {
                    "command": "workbench.view.explorer"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "t",
                "s"
            ],
            "commands": [
                {
                    "command": "workbench.action.toggleSidebarVisibility"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "t",
                "t"
            ],
            "commands": [
                {
                    "command": "workbench.action.terminal.toggleTerminal"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "b"
            ],
            "commands": [
                {
                    "command": "workbench.action.navigateBack"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "p"
            ],
            "commands": [
                {
                    "command": "workbench.action.navigateForward"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "l"
            ],
            "commands": [
                {
                    "command": "workbench.action.nextEditor"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "b",
                "h"
            ],
            "commands": [
                {
                    "command": "workbench.action.previousEditor"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "t",
                "t"
            ],
            "commands": [
                {
                    "command": "workbench.action.terminal.toggleTerminal"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "t",
                "p"
            ],
            "commands": [
                {
                    "command": "workbench.actions.view.problems"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                {
                    "command": "workbench.action.quickOpen"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "<leader>"
            ],
            "commands": [
                {
                    "command": "editor.action.quickFix"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "g"
            ],
            "commands": [
                {
                    "command": "editor.action.goToDeclaration"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "r"
            ],
            "commands": [
                {
                    "command": "editor.action.rename"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "f"
            ],
            "commands": [
                {
                    "command": "editor.action.formatDocument"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "d"
            ],
            "commands": [
                {
                    "command": "editor.action.previewDeclaration"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "u"
            ],
            "commands": [
                {
                    "command": "editor.action.referenceSearch.trigger"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "t"
            ],
            "commands": [
                {
                    "command": "go.test.cursor"
                }
            ]
        }
    ],
    // Other settings
    "window.zoomLevel": 0,
    "explorer.openEditors.visible": 0,
    "files.eol": "\n",
    "settings.cycle": [
        {
            "id": "zen",
            "values": [
                {
                    "window.menuBarVisibility": "hidden",
                    "workbench.activityBar.visible": false,
                },
                {
                    "window.menuBarVisibility": "default",
                    "workbench.activityBar.visible": true,
                }
            ]
        }
    ],
    "window.menuBarVisibility": "default",
    "terminal.integrated.rendererType": "dom",
    "window.titleBarStyle": "custom",
    "go.testOnSave": true,
}